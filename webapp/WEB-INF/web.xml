<?xml version="1.0" encoding="UTF-8"?>
<!--============================================================ Deployment 
	Descriptor: web.xml ============================================================= -->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:web="http://java.sun.com/xml/ns/javaee" 
 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
 id="WebApp_ID" version="2.5">
  <display-name>store</display-name>
  <context-param>
    <param-name>productImagesDirectory</param-name>
    <param-value>C:/images</param-value>
  </context-param>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>ua.nure.hartseva.SummaryTask4.web.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AjaxGetCertainProductServlet</servlet-name>
    <servlet-class>ua.nure.hartseva.SummaryTask4.web.AjaxGetCertainProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjaxGetCertainProductServlet</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AjaxAddToCartServlet</servlet-name>
    <servlet-class>ua.nure.hartseva.SummaryTask4.web.AjaxAddToCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjaxAddToCartServlet</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AjaxChangeCartServlet</servlet-name>
    <servlet-class>ua.nure.hartseva.SummaryTask4.web.AjaxChangeCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjaxChangeCartServlet</servlet-name>
    <url-pattern>/changed</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ImagesServlet</servlet-name>
    <servlet-class>ua.nure.hartseva.SummaryTask4.web.ImagesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImagesServlet</servlet-name>
    <url-pattern>/images</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.nure.hartseva.SummaryTask4.web.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/WEB-INF/jsp/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>CheckBlockedUserFilter</filter-name>
    <filter-class>ua.nure.hartseva.SummaryTask4.web.filter.CheckBlockedUserFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CheckBlockedUserFilter</filter-name>
    <url-pattern>/WEB-INF/jsp/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <listener>
    <listener-class>ua.nure.hartseva.SummaryTask4.web.listener.ContextListener</listener-class>
  </listener>
  <resource-ref>
    <description>database mysql connection pool config</description>
    <res-ref-name>jdbc/store</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/jsp/error/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/jsp/error/403.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/jsp/error/400.jsp</location>
  </error-page>
  
  
  
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>en</param-value>
  </context-param>
  <context-param>
    <param-name>locales</param-name>
    <param-value>/WEB-INF/locales.properties</param-value>
  </context-param>
</web-app>